{
  "name": "logsifter",
  "version": "0.0.2",
  "description": "A minimalist log viewer inspired by Apple Console",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run build:css && electron .",
    "dev": "concurrently \"npm run watch:css\" \"electron .\"",
    "build:css": "npx @tailwindcss/cli -i ./src/renderer/input.css -o ./src/renderer/styles.css",
    "watch:css": "npx @tailwindcss/cli -i ./src/renderer/input.css -o ./src/renderer/styles.css --watch",
    "dist": "npm run build:css && electron-builder",
    "dist:mac": "npm run build:css && electron-builder --mac"
  },
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.logsifter.app",
    "productName": "LogSifter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "src/assets/icons/mac/icon.icns",
      "target": "dmg",
      "fileAssociations": [
        {
          "ext": "log",
          "name": "Log File",
          "role": "Viewer"
        }
      ]
    },
    "win": {
      "icon": "src/assets/icons/win/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "src/assets/icons/png",
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0",
    "electron-reload": "^2.0.0-alpha.1",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0"
  }
}
